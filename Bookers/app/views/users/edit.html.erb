
<div class="userinfo">
<h1>User info</h1>

<!-- form_for部分 -->
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
      <div>
        <h3>error</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>image</h4>
  <%= f.attachment_field :profile_image %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>

<% end %>
</div>

