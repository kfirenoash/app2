<div class="container">

  <div class="book-edit-title">

    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <div>
        <h3>error</h3>
        <ul>
        <%= @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for(@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title , class: "edit-title"%>
      <p>Body</p>
      <%= f.text_area :body , class: "edit-body"%>
      <br>
      <br>
      <%= f.submit "Update Book" %>
    <% end %>

    <p>
      <%= link_to "show", book_path %>
      |
        <a href="/books/new">Back</a>
    </p>
  </div>
</div>