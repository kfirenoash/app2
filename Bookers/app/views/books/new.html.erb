

<div class="container clearfix">
 <div class="row">
 	<div class="col-lg-3" style="background-color: white">
 		<h2>User info</h2>

	　　<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>

 		<table class="table table-hover">

 			<tbody>
 				 <tr>
 					<td>name</td>
 					<td><%= current_user.name %></td>
 				 </tr>
 				 <tr>
 					<td>Introduction</td>
 					<td><%= current_user.introduction %></td>
 				 </tr>
 			</tbody>
 		</table>


<%= link_to(edit_user_path(current_user.id), class:  "btn btn-default") do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end -%>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title , class: "edit-title"%>

  <p>Body</p>
  <%= f.text_area :body , class: "edit-body"%>
  <br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>

<% end %>

 	</div>
 	<div class="col-lg-9">
<h1>Books</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th><P></P></th>
				<th><P>title</P></th>
				<th><P>body</P></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<% if current_user.id == book.user_id then %>
			<tr class="new-table">
				<td><span><%= render 'books/image',user: current_user %></span></td>
				<td><span><%= link_to book.title, "/books/#{book.id}"%></span></td>
				<td><span><%= book.body %></span></td>
			</tr>
			<% end %>
			<% end %>

		</tbody>
	</table>
   </div>
  </div>
</div>
